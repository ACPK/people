%aside#filters.filters-container
  %h2 Projects
  %ul.nav.nav-tabs.projects-types{ role: 'tablist' }
    %li.active
      %input#active-type.toggle-by-type{ type: 'radio', name: 'projectType', checked: true, data:{ type: 'active' }}
      %label{ for: 'active-type' } Active
    %li.archived
      %input#archive-type.toggle-by-type{ type: 'radio', name: 'projectType', data:{ type: 'archived' }}
      %label{ for: 'archive-type' } Archived
    %li.potential
      %input#potential-type.toggle-by-type{ type: 'radio', name: 'projectType', data:{ type: 'potential' }}
      %label{ for: 'potential-type' } Potential
  .filters-extended
    .roles
      %input{ type: 'text', name: 'roles', placeholder: 'Filter roles...' }
    .projects
      %input{ type: 'text', name: 'projects', placeholder: 'Filter projects...' }
    .input-group.pull-right
      %label.checkbox-inline
        %span.info-top{ title: 'People leaving the project soon are highlighted red.' }
          %input#highlight-ending{ type: 'checkbox' } Highlight ending
      %label.checkbox-inline
        %span.info-top{ title: 'People joining the project soon are highlighted green.' }
          %input#show-next{ type: 'checkbox' } Show next
      %label.checkbox-inline
        %span.info-top{ title: 'People for whom the Client does not pay are marked with "!".' }
          %input#highlight-not-billable{ type: 'checkbox' } Highlight not billable

