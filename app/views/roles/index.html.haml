.row
  .col-sm-8.col-sm-offset-2
    %ul#roles
      - if current_user.admin?
        %li.no-sortable
          .input-group
            %span.input-group-btn
              #add-role.btn.btn-primary create
            = text_field_tag 'name', nil, placeholder: 'Enter role name...', class: 'form-control'
            .input-group-addon.priority-group
              .select
                = select_tag 'priority', options_for_select([1, 2, 3, 4]), id: 'priority'
                %label priority
            .input-group-addon.billable-group
              .checkbox
                %label
                  %input#billable{ type: 'checkbox' } billable?
            .input-group-addon.technical-group
              .checkbox
                %label
                  %input#technical{ type: 'checkbox' } technical?
            .input-group-addon.show-in-team-group
              .checkbox
                %label
                  %input#show-in-team{ type: 'checkbox' } show in team?
