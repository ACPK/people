.row
  .col-sm-8.col-sm-offset-2
    %table.table
      %thead
        %tr
          %td Color
          %td Name
          %td Billable?
          %td Technical?
          %td Show in team?
          %td
      %tbody
      - roles.each do |role|
        %tr
          %td{style: "background-color: #{role.color}" }
          %td= role.name
          %td= t(role.billable.class)
          %td= t(role.technical.class)
          %td= t(role.show_in_team.class)
          %td
            = link_to edit_role_path(role) do
              = fa_icon 'pencil'

    = link_to 'Create new role', new_role_path, class: 'btn btn-default'
