= simple_form_for project  do |f|
  = f.input :name
  = f.input :slug
  = f.input :end_at, as: :date_picker, wrapper: :prepend, label_html: { class: 'input-group-addon' }
  = f.input :kickoff, as: :date_picker, wrapper: :prepend, label_html: { class: 'input-group-addon' }
  = f.input :maintenance_support,  as: :boolean,  wrapper: :vertical_boolean, label: false, inline_label: true
  = f.input :maintenance_development, as: :boolean,  wrapper: :vertical_boolean, label: false, inline_label: true
  = f.input :potential, as: :boolean,  wrapper: :vertical_boolean, label: false, inline_label: true
  .actions
    = link_to "Back", :back, class: "btn btn-default btn-sm"
    = f.button :submit, "Save", class: "btn-success"
