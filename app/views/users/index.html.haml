#filters
  .filters
    .users
      %input{ type: 'text', name: 'users', placeholder: 'Filter users...' }
    .roles
      %input{ type: 'text', name: 'roles', placeholder: 'Filter roles...' }
    .projects
      %input{ type: 'text', name: 'projects', placeholder: 'Filter projects...' }
    .abilities
      %input{ type: 'text', name: 'abilities', placeholder: 'Filter abilities...' }
    .period_in_project
      %select{ name: 'months', placeholder: 'Only show users in a project for over...'}

%table.table.table-striped.table-hover#users
  %thead
    %th
    %th.to_end To end
    %th
    %th
      %p.columnName User
      .sort
        .up.glyphicon.glyphicon-chevron-up.active.default{ data: { sort: 'name' } }
        .down.glyphicon.glyphicon-chevron-down{ data: { sort: 'name' } }
    %th
      %p.columnName Role
      .sort
        .up.glyphicon.glyphicon-chevron-up{ data: { sort: 'role' } }
        .down.glyphicon.glyphicon-chevron-down{ data: { sort: 'role' } }
    %th Employment
    %th Projects
    %th= 'Admin Role' if current_user.admin?
